<div class="col-md-4 mx-auto mt-5">
    <div class="card text-center">
        <div class="card-header">
            <h3 class="display-4">New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-group mt-4">
                    <input type="text" class="form-control" name="title" placeholder="title..." autofocus>
                </div>
                <div class="form-group mt-4">
                    <textarea name="description" class="form-control" id="" cols="30" rows="10" name="description" placeholder="description..."></textarea>
                </div>
                <div class="form-group mt-4">
                    <button class="btn btn-warning w-100">send</button>
                </div>
            </form>
        </div>
    </div>
</div>